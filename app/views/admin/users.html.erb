<p id="notice"><%= notice %></p>

<h1>All Users</h1>

<% if @users.empty? %>
  <p>No users to display</p>
<% else %>
  <table>
    <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Phone Number</th>
      <th>City</th>
      <th>Postal Code</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.phone %></td>
        <td><%= user.city %></td>
        <td><%= user.postal_code %></td>
        <td><%= link_to 'Show', admin_path %></td>
        <td><%= link_to 'Edit', admin_path %></td>
        <td><%= link_to 'Destroy', admin_path %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New User', new_user_registration_path %> <br>
<%= link_to 'Back to dashboard', admin_path %>