<p id="notice"><%= notice %></p>

<h1>Past Orders</h1>

<% if current_user.admin %>
  <br>
  <div class="card">
    <div class="card-body">
      <%= render 'search' %>
    </div>
  </div>
  <br>
<% end %>

<table style="width:100%" class="table">
  <thead>
  <tr>
    <th>ID</th>
    <% if current_user.admin %>
      <th>User Email</th>
    <% end %>
    <th>Date</th>
    <th>Tax</th>
    <th>Discount</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <% if current_user.admin %>
        <td><%= order.user.email %></td>
      <% end %>
      <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= order.tax %></td>
      <td><%= order.discount %></td>
      <td><%= order.amount %></td>
      <td><%= order.status %></td>
      <td><%= link_to 'Review Order', order_manage_path(order) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Home', root_path %>
