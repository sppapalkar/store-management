<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <ul class="list-group list-group-horizontal">
  <li class="list-group-item"><%= link_to 'View Items', items_path %> </li>
  <li class="list-group-item"><%= link_to 'View Orders', order_index_path %> </li>
  <li class="list-group-item"><%= link_to 'View Wishlist', wishlist_path %> </li>
  <li class="list-group-item"><%= link_to 'My Cart', cart_path %> </li>
  <li class="list-group-item"><%= link_to 'View Saved Cards', cards_path %> </li>
  <li class="list-group-item"><%= link_to 'Give Feedback', new_feedback_path %> </li>
  </ul>

<% end %>

<br>

<h1>My Wishlist</h1>

<table style="width:100%">
  <thead>
  <tr>
    <th>Item Brand</th>
    <th>Item Name</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% @wishlist.each do |wish_item| %>
    <% item = Item.find(wish_item.item_id) %>
    <tr>
      <td><%= item.brand %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <% if item.quantity > 0 %>
        <td><%= link_to 'Add to Cart', cart_path(:item_id => item), method: :post %></td>
      <% else  %>
        <td>Item Unavailable - Subscribe</td>
      <%end %>
      <td><%= link_to 'Remove From Wishlist', wishlist_path(:id => wish_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Back', :back %> <br>
<%= link_to 'All Items', items_path %>

