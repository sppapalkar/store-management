<p id="notice"><%= notice %></p>

<h1>All Users</h1>

<% if @users.empty? %>
  <p>No users to display</p>
<% else %>
  <table style="width:100%">
    <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Phone Number</th>
      <th>City</th>
      <th>Postal Code</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <% unless user.admin %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.phone %></td>
          <td><%= user.city %></td>
          <td><%= user.postal_code %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'View Orders', order_index_path(:search => {:user_id => user, :item_id => ''}), :method => :post %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'This will delete ALL user data. Are you sure?' }  %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
<% end %>

<br>

