<h1>Store Management System</h1>

<% if user_signed_in? %>
  <%= link_to 'View Saved Cards', cards_path %> <br>
  <%= link_to 'Edit Profile', edit_user_registration_path %> <br>
  <% if current_user.admin %>
    <%= link_to 'Add new Category', new_category_path %> <br>
    <%= link_to 'Add new Items', new_item_path %> <br>
  <% end %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> <br>
<% else %>
  <%= link_to 'Sign Up', new_user_registration_path %> <br>
  <%= link_to 'Sign In', new_user_session_path  %> <br>
<% end %>
