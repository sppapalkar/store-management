<p id="notice"><%= notice %></p>

<h1>My Cart</h1>

<table>
  <thead>
  <tr>
    <th>Item Name</th>
    <th>Item Brand</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Total Price</th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |cart_item| %>
    <% item = Item.find(cart_item.items_id) %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.brand %></td>
      <td><%= item.price %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= item.price * cart_item.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>

